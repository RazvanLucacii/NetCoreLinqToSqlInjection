<div class="container mt-5">
    <h1>Nuevo Personaje</h1>

    <p>
        <a asp-controller="Personajes" asp-action="Index" class="btn btn-info">
            Atras
        </a>
    </p>

    <form method="post">
        <label>Id Personaje</label>
        <input type="number" class="form-control" name="idPersonaje" />
        <label>Nombre</label>
        <input type="text" name="nombre" class="form-control" />
        <label>Imagen</label>
        <input type="text" name="imagen" class="form-control" />
        <button class="btn btn-success">
            Create Personaje
        </button>
    </form>
</div>
